<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">    
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#449def" />
            <stroke
                android:width="1dp"
                android:color="#8DB8CC" />
            <corners
                android:radius="3dp" />           
        </shape>
    </item>
            
    <item>        
        <shape>
            <gradient
                android:startColor="#42C2F7"
                android:endColor="#00A2E6"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#1CB6F5" />
            <corners
                android:radius="6dp" />            
        </shape>
    </item>                    
</selector>